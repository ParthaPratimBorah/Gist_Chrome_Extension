{
  "manifest_version": 3,
  "name": "3D Page Summarizer",
  "version": "1.0",
  "description": "Summarizes web pages with a minimalist 3D interface.",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Open Summarizer"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}